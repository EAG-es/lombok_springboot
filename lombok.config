# This file configures Lombok behavior for the entire project.
# Stop searching for other config files in parent directories
config.stopBubbling = true

# Tells Lombok to throw an IllegalArgumentException instead of NullPointerException when @NonNull is violated
lombok.nonNull.exceptionType = IllegalArgumentException

# Adds the @NonNull annotation to the generated setters, constructors, and builders
# This helps the IDE's static analysis tools (like null detection) understand the generated code
lombok.addNullAnnotations = spring

# Ensure that @Data and @Value also generate @NonNull checks for fields marked as such
lombok.copyableAnnotations += org.springframework.lang.NonNull
